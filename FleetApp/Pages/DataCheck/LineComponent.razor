@page "/datacheck/line"

<h3><span class="oi oi-list" aria-hidden="true"></span> Line Data Check</h3>
<hr />
<form>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputDataElements">Data Elements</label>
            <input type="text" class="form-control" id="inputDataElements" placeholder="Data Elements" @bind="dataElements">
        </div>
    </div>
    <button type="button" @onclick="CalculateLineDataCheck" class="btn btn-primary">Calculate</button>
</form>
<hr />
<form>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputResult">Result</label>
            <input type="text" class="form-control" id="inputResult" placeholder="Result" @bind="result" readonly>
        </div>
    </div>
</form>

@code {
    string dataElements { get; set; }
    string result { get; set; }
    void CalculateLineDataCheck()
    {
        result = EldEventInputHelper.GetLineDataCheck(dataElements);
    }
}
